    %nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
      %ul.navbar-nav
        %li.nav-item
          %a.nav-link{href: new_game_path}
            =t('new_game')
    .container
      .row
        .col-lg-12.main-content
          = yield

